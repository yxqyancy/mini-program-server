/* 首页样式 - 海洋主题 + 柯基元素 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, var(--ocean-white) 0%, var(--ocean-light) 100%);
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 60rpx 30rpx 40rpx;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  text-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.2);
  margin-bottom: 20rpx;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--ocean-text-light);
  opacity: 0.9;
  display: block;
  line-height: 1.5;
}

/* 服务器连接状态 */
.server-status-section {
  margin: 0 20rpx 30rpx;
}

.server-status-card {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 24rpx rgba(30, 58, 138, 0.12);
  border: 2rpx solid rgba(30, 58, 138, 0.1);
}

.server-status-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.server-status-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.server-status-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  flex: 1;
}

.server-status-indicator {
  font-size: 28rpx;
  animation: none;
}

.server-status-indicator.loading {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.server-status-info {
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 28rpx;
  color: var(--ocean-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.last-check-text {
  font-size: 24rpx;
  color: var(--ocean-text-light);
  display: block;
  margin-bottom: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #e74c3c;
  display: block;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.server-status-buttons {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.server-status-buttons .btn-secondary {
  background: var(--ocean-accent);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  font-weight: 600;
  flex: 1;
  min-width: 200rpx;
  transition: all 0.3s ease;
}

.server-status-buttons .btn-secondary:active {
  background: var(--ocean-secondary);
  transform: scale(0.95);
}

/* 管理员功能 */
.admin-section {
  margin: 0 20rpx 30rpx;
}

.admin-card {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 24rpx rgba(30, 58, 138, 0.12);
