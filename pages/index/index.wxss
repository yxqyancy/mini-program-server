}

.admin-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.admin-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.admin-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--ocean-primary);
}

.admin-buttons {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.btn-secondary {
