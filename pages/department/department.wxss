  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.admin-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.btn-remove {
  background: var(--ocean-coral);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  margin-left: 15rpx;
}

.add-admin {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.admin-input {
  flex: 1;
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 26rpx;
  background: white;
}

.btn-add {
  background: var(--ocean-accent);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

/* 密码验证相关样式 */
