/* 部门简介页面样式 - 海洋主题 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, var(--ocean-white) 0%, var(--ocean-light) 100%);
}

/* 页面标题样式 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 16rpx rgba(30, 58, 138, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  text-shadow: 0 2rpx 4rpx rgba(30, 58, 138, 0.1);
}

.header-buttons {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.save-btn {
  background: linear-gradient(135deg, var(--ocean-secondary) 0%, var(--ocean-accent) 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.save-btn:active {
  background: linear-gradient(135deg, var(--ocean-primary) 0%, var(--ocean-secondary) 100%);
  transform: scale(0.95);
}

.edit-btn {
  background: linear-gradient(135deg, var(--ocean-primary) 0%, var(--ocean-secondary) 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(30, 58, 138, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 章节样式 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid var(--ocean-light);
}

.section-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--ocean-primary);
}

/* 信息项样式 */
.info-item {
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid var(--ocean-accent);
}

.info-label {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--ocean-secondary);
  margin-bottom: 10rpx;
  display: block;
}

.info-value {
  font-size: 28rpx;
  color: var(--ocean-text);
  line-height: 1.6;
}

/* 输入组样式 */
.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--ocean-secondary);
  margin-bottom: 10rpx;
  display: block;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 15rpx;
  border: 2rpx solid var(--ocean-light);
  border-radius: 10rpx;
  font-size: 26rpx;
  background: white;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  padding: 15rpx;
  border: 2rpx solid var(--ocean-light);
  border-radius: 10rpx;
  font-size: 26rpx;
  background: white;
  min-height: 120rpx;
  margin-bottom: 15rpx;
  box-sizing: border-box;
  resize: vertical;
}

/* 成员介绍样式 */
.members-container {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(30, 58, 138, 0.1);
}

.members-grid {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  padding: 20rpx;
  overflow-x: auto;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
}

.members-grid::-webkit-scrollbar {
  height: 8rpx;
}

.members-grid::-webkit-scrollbar-track {
  background: rgba(30, 58, 138, 0.1);
  border-radius: 4rpx;
}

.members-grid::-webkit-scrollbar-thumb {
  background: var(--ocean-accent);
  border-radius: 4rpx;
}

.member-card {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(30, 58, 138, 0.1);
  text-align: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  width: 280rpx;
  min-height: 350rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-shrink: 0;
}

.member-card:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 25rpx rgba(30, 58, 138, 0.2);
}

.member-photo-container {
  margin-bottom: 20rpx;
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: auto;
}

.member-photo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 3rpx solid var(--ocean-accent);
  margin: 0 auto 15rpx;
  display: block;
}

.member-photo-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 3rpx dashed var(--ocean-light);
  margin: 0 auto 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.photo-placeholder-text {
  font-size: 50rpx;
  color: var(--ocean-secondary);
}

.member-info {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: auto;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  display: block;
  margin-bottom: 10rpx;
  line-height: 1.4;
  word-wrap: break-word;
  height: auto;
}

.member-description {
  font-size: 26rpx;
  color: var(--ocean-text);
  line-height: 1.4;
  display: block;
  word-wrap: break-word;
  flex: 1;
  height: auto;
}

/* 成员编辑样式 */
.members-edit {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(30, 58, 138, 0.1);
}

/* 添加成员按钮 */
.add-member-btn {
  background: linear-gradient(135deg, var(--ocean-accent), var(--ocean-primary));
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(30, 58, 138, 0.3);
  transition: all 0.3s ease;
  margin-left: 20rpx;
}

.add-member-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.4);
}

/* 删除成员按钮 */
.remove-member-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #ff4757, #ff3742);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 3rpx 12rpx rgba(255, 71, 87, 0.4);
  transition: all 0.3s ease;
  z-index: 10;
}

.remove-member-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.6);
}

/* 更新成员卡片编辑样式，添加相对定位以支持删除按钮 */
.member-card-edit {
  position: relative;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(240, 248, 255, 0.9) 100%);
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(30, 58, 138, 0.15);
  border: 2rpx solid rgba(30, 58, 138, 0.1);
  transition: all 0.3s ease;
  width: 350rpx;
  min-height: 400rpx;
  height: auto;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}

.member-card-edit:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 10rpx 30rpx rgba(30, 58, 138, 0.2);
}

