/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--ocean-primary) 0%, var(--ocean-secondary) 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  margin: 5rpx;
}

.btn-success {
  background: var(--ocean-accent);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  margin: 5rpx;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  color: var(--ocean-primary);
  border: 2rpx solid var(--ocean-primary);
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  margin: 5rpx;
}

.btn-danger {
  background: var(--ocean-coral);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 海洋装饰元素 */
.ocean-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
}

.bubble {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.3;
  animation: float 6s ease-in-out infinite;
}

.bubble-1 {
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.bubble-2 {
  top: 60%;
  right: 15%;
  animation-delay: 2s;
}

.bubble-3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
  }
}

/* 授权验证弹窗样式 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
  text-align: center;
  position: relative;
  z-index: 1001;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  margin-bottom: 20rpx;
  display: block;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

/* 管理员管理弹窗样式 */
.admin-modal {
