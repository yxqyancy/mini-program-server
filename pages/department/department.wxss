}

.btn-confirm {
  background: var(--ocean-accent);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

/* 部门信息样式 */
.department-info {
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(240, 248, 255, 0.9) 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(30, 58, 138, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.department-name {
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.department-name::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 3rpx;
  background: linear-gradient(90deg, var(--ocean-accent), var(--ocean-primary));
  border-radius: 2rpx;
}

.name-label {
  display: block;
  font-size: 24rpx;
  color: var(--ocean-secondary);
  font-weight: 500;
  margin-bottom: 15rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.name-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  text-shadow: 0 2rpx 4rpx rgba(30, 58, 138, 0.1);
  background: linear-gradient(135deg, var(--ocean-primary), var(--ocean-secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.department-description {
  text-align: left;
}

.desc-label {
  display: block;
  font-size: 26rpx;
  color: var(--ocean-secondary);
  font-weight: 600;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid var(--ocean-accent);
}

.desc-value {
  display: block;
  font-size: 28rpx;
  color: var(--ocean-text);
  line-height: 1.8;
  text-align: justify;
  text-indent: 2em;
  letter-spacing: 1rpx;
  word-spacing: 2rpx;
  background: rgba(255, 255, 255, 0.7);
  padding: 25rpx;
  border-radius: 15rpx;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .page-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .page-title {
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .members-grid,
  .members-grid-edit {
    flex-direction: column;
    overflow-x: visible;
  }
  
  .member-card,
  .member-card-edit {
    min-width: auto;
    width: 100%;
  }
  
  .pagination {
    flex-direction: column;
    gap: 10rpx;
    min-width: auto;
  }
  
  .page-numbers {
    order: -1;
  }
  
  .modal-content {
    width: 90%;
    padding: 30rpx;
  }
  
  .add-admin {
    flex-direction: column;
  }
  
  .btn-add {
    width: 100%;
  }
  
  .modal-footer {
    flex-direction: column;
  }
} 