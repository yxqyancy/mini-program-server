/* pages/cloud-test/cloud-test.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.test-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.test-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(79, 172, 254, 0.3);
}

.clear-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
}

.clear-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 107, 0.3);
}

.upload-results {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.result-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.image-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.uploaded-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 15rpx;
  border: 3rpx solid #4facfe;
}

.image-url {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
  text-align: center;
  max-width: 100%;
}

.file-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.download-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.file-url {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
  text-align: center;
  max-width: 100%;
}

.no-data {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  font-style: italic;
}

.test-results {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  border-left: 6rpx solid #4facfe;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.result-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
}

.result-status.success {
  background: #d4edda;
  color: #155724;
}

.result-status.error {
  background: #f8d7da;
  color: #721c24;
}

.result-message {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.result-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.instructions {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.instruction-item {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  padding-left: 20rpx;
  position: relative;
}

.instruction-item::before {
  content: "â€¢";
  position: absolute;
  left: 0;
  color: #4facfe;
  font-weight: bold;
} 