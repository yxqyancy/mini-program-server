/* 海洋装饰 */
.ocean-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: -1;
}

.seaweed {
  position: absolute;
  font-size: 40rpx;
  animation: seaweedSway 6s ease-in-out infinite;
  opacity: 0.7;
}

.seaweed-1 {
  bottom: 10%;
  left: 5%;
  animation-delay: 0s;
}

.seaweed-2 {
  bottom: 15%;
  right: 10%;
  animation-delay: 2s;
}

.seaweed-3 {
  bottom: 8%;
  left: 60%;
  animation-delay: 4s;
}

@keyframes seaweedSway {
  0%, 100% {
    transform: rotate(-5deg);
  }
  50% {
    transform: rotate(5deg);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
