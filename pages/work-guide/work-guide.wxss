  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .tools-grid {
    grid-template-columns: 1fr;
  }
  
  .workflow-card-edit,
  .notice-card-edit,
  .tool-card-edit,
  .material-card-edit {
    width: 360rpx;
    padding: 30rpx;
  }
  
  .material-card {
    width: 280rpx;
    padding: 30rpx;
  }
}

