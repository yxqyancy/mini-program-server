.modal-header {
  background: var(--ocean-primary);
  color: white;
  padding: 30rpx;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-body {
  padding: 40rpx 30rpx;
}

.modal-desc {
  font-size: 30rpx;
  color: var(--ocean-text);
  line-height: 1.6;
  text-align: center;
  margin-bottom: 20rpx;
}

.auth-info {
  background: var(--ocean-light);
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.auth-note {
  font-size: 26rpx;
  color: var(--ocean-text-light);
  text-align: center;
}

.modal-footer {
