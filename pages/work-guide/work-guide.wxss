/* 工作材料卡片样式 */
.materials-container {
  margin-bottom: 20rpx;
}

.materials-grid {
  display: flex;
  flex-direction: row;
  gap: 30rpx;
  overflow-x: auto;
  padding: 10rpx 0;
  scroll-behavior: smooth;
}

.materials-grid::-webkit-scrollbar {
  height: 8rpx;
}

.materials-grid::-webkit-scrollbar-track {
  background: rgba(30, 58, 138, 0.1);
  border-radius: 4rpx;
}

.materials-grid::-webkit-scrollbar-thumb {
  background: var(--ocean-accent);
  border-radius: 4rpx;
}

.material-card {
  background: white;
  border-radius: 15rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(30, 58, 138, 0.1);
  text-align: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  width: 300rpx;
  min-height: 400rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex-shrink: 0;
  cursor: pointer;
}

.material-card:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 25rpx rgba(30, 58, 138, 0.2);
}

.material-card:active {
  border-color: var(--ocean-secondary);
  transform: scale(0.98);
}

.material-info {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: auto;
}

.material-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--ocean-primary);
  display: block;
  margin-bottom: 25rpx;
  line-height: 1.4;
  word-wrap: break-word;
  height: auto;
}

.material-file {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  margin-top: 20rpx;
  flex: 0 0 auto;
}

.file-icon {
  font-size: 40rpx;
  color: var(--ocean-accent);
}

.file-name {
  font-size: 22rpx;
  color: var(--ocean-secondary);
  line-height: 1.3;
  display: block;
  word-break: break-all;
  height: auto;
}

/* 工作材料编辑模式卡片样式 */
.materials-edit {
  margin-bottom: 20rpx;
}

.materials-grid-edit {
  display: flex;
  flex-direction: row;
  gap: 30rpx;
  overflow-x: auto;
  padding: 10rpx 0;
  scroll-behavior: smooth;
}

.material-card-edit {
  position: relative;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(240, 248, 255, 0.9) 100%);
  border-radius: 15rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(30, 58, 138, 0.15);
  border: 2rpx solid rgba(30, 58, 138, 0.1);
  transition: all 0.3s ease;
  width: 400rpx;
  min-height: 450rpx;
  height: auto;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}

.material-card-edit:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 10rpx 30rpx rgba(30, 58, 138, 0.2);
}

.material-info-edit {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  flex: 1;
  height: auto;
}

.material-name-input {
  padding: 25rpx;
  border: 2rpx solid var(--ocean-light);
  border-radius: 12rpx;
  font-size: 26rpx;
  background: white;
  text-align: left;
  min-height: 80rpx;
  box-sizing: border-box;
}

.file-upload {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-top: 20rpx;
}

.file-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
  background: rgba(30, 58, 138, 0.05);
  border-radius: 10rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.file-info .file-icon {
  font-size: 30rpx;
  color: var(--ocean-accent);
}

.file-info .file-name {
  font-size: 20rpx;
  color: var(--ocean-secondary);
  text-align: center;
  word-break: break-all;
}

.btn-upload {
  background: var(--ocean-accent);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  width: fit-content;
  align-self: center;
}

.btn-upload:active {
  background: var(--ocean-secondary);
}

.btn-remove-file {
  background: var(--ocean-coral);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  width: fit-content;
  align-self: center;
}

.btn-remove-file:active {
  background: #e53e3e;
}

.remove-material-btn {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background: var(--ocean-coral);
  color: white;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.remove-material-btn:active {
  background: #e53e3e;
  transform: scale(0.95);
} 