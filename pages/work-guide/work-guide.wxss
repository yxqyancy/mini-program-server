/**work-guide.wxss**/
.container {
  min-height: 100vh;
  padding: 30rpx;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--ocean-primary);
}

.header-buttons {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.save-btn {
  background: var(--ocean-accent);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.save-btn:active {
  background: var(--ocean-secondary);
  transform: scale(0.95);
}

.edit-btn {
  background: var(--ocean-secondary);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 区块样式 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--ocean-light);
}

.section-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--ocean-primary);
}

/* 工作流程样式 */
.workflows-container {
  margin-bottom: 30rpx;
